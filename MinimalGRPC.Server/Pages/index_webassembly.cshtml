@page "/index_webassembly"
@namespace MinimalGRPC.Pages
@using MinimalGRPC.gRPCClient
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>MinimalGRPC (WASM)</title>

    <base href="~/" />

    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />

</head>
<body>
    <!-- CSE -->
    <div id="app">
        <div class="spinner-grid spinner-glow">
            <div class="spinner-grid-content">
                <div class="spinner-grid-center">
                    <div class="spinner-loading">
                        <h1>Loading MinimalGRPC.Client (WebAssembly)...</h1>
                        <h1>Please wait.</h1>
                        <div class="spinner">
                            <div class="rect1"></div>
                            <div class="rect2"></div>
                            <div class="rect3"></div>
                            <div class="rect4"></div>
                            <div class="rect5"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.webassembly.js"></script>

</body>
</html>
